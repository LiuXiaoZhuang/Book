/* pages/books/books.wxss */
.banner{
  flex: 1;
  height: 180rpx;
  padding: 0 20rpx;
  margin-top: 20rpx;
}
.banner image{
  background: red;
  height: 180rpx;
  width: 710rpx;
  border-radius: 8rpx;
}
.novel_list{
  display: block;
  width: 100%;
  padding: 10rpx 0rpx 30rpx 0rpx;
  overflow-x: hidden;
}
.novel_list .novel_animation_box{
  width: 750rpx;
  height: 160rpx;
  position: relative;
  margin-top: 30rpx;
}
.novel_list .novel_animation_box .novel_box{
  width: 1070rpx;
  height: 160rpx;
  display: flex;
  flex-direction: row;
  flex-wrap: nowrap;
  justify-content: flex-start;
  align-items: center;
  position: absolute;
  left: 0rpx;
}
.novel_list .novel_animation_box .novel_box .novel{
  width: 750rpx;
  display: flex;
  flex-direction: row;
  flex-wrap: nowrap;
  justify-content: flex-start;
  align-items: center;
}
.novel_list .novel_animation_box .novel_box .novel .novel_cover{
  margin-left: 20rpx;
  width: 120rpx;
  height: 160rpx;
  background: #EEEEEE;
}
.novel_list .novel_animation_box .novel_box .novel .novel_info{
  width: 518rpx;
  margin-left: 20rpx;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: flex-start;
}
.novel_list .novel_animation_box .novel_box .show_ctrl{
  width: 32rpx;
  height: 32rpx;
  padding:64rpx 20rpx;
  display: block;
  border: 0rpx;
}
.novel_list .novel_animation_box .novel_box .novel .novel_info .novel_name{
  display: block;
  font-size: 32rpx;
}
.novel_list .novel_animation_box .novel_box .novel .novel_info .record{
  display: block;
  margin: 20rpx 0rpx 10rpx 0rpx;
  font-size: 22rpx;
}
.novel_list .novel_animation_box .novel_box .novel .novel_info .novel_author{
  display: block;
  font-size: 22rpx;
}
.novel_list .novel_animation_box .novel_box .novel_ctrl{
  flex:1;
  display: flex;
  flex-direction: row;
  flex-wrap: nowrap;
  justify-content: flex-start;
  align-items: center;
}
.novel_list .novel_animation_box .novel_box .novel_ctrl button{
  width: 160rpx;
  height: 160rpx;
  text-align: center;
  font-size: 30rpx;
  line-height: 160rpx;
  padding: 0rpx;
  margin: 0rpx;
  border-radius: 0rpx;
  color: #FFFFFF;
}
.novel_list .novel_animation_box .novel_box .novel_ctrl .top{
  background: blue;
}
.novel_list .novel_box .novel_ctrl .del{
  background: red;
}
.novel_list .novel_animation_box .novel_box .novel_ctrl button::after,.novel_list .novel_animation_box .novel_box .novel_ctrl button::before{
  display: none;
}

.no_book{
  flex: 1;
  width: 100%;
  height: 300rpx;
  text-align: center;
  line-height: 300rpx;
}