page{
  background: #f3f3f3;
  height: 100%;
  max-height: 100%;
  overflow: hidden;
}
.main_box{
  overflow-y: scroll;
  display: block;
  width: 100%;
  min-width: 100%;
}
.main_box .inner_box{
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: stretch;
}
.main_box .title{
  display: block;
  font-size: 44rpx;
  font-weight: bold;
  padding: 0 20rpx;
  margin-bottom: 30rpx;
  margin-top: 50rpx;
}
.main_box .content_box{
  display: block;
  padding: 0 20rpx 10rpx 20rpx;
}
.main_box .content_box .paragraph{
  display: block;
}
.show_ctrl_click_area{
  width: 20%;
  height: 20%;
  position: fixed;
  top: 40%;
  left: 40%;
  z-index: 1;
}
.ctrl_box{
  width: 100%;
  height: 320rpx;
  position: fixed;
  bottom: 0;
  left: 0;
  z-index: 2;
}
.ctrl_box .title{
  display: block;
  width: 100%;
  font-size: 30rpx;
  text-align: center;
  padding: 25rpx 0;
}
.ctrl_box .dir_slider{
  width: 100%;
  height: 80rpx;
  display: flex;
  flex-direction: row;
  flex-wrap: nowrap;
  justify-content: space-around;
  align-items: center;
}
.ctrl_box .dir_slider .icon{
  width: 64rpx;
  height: 64rpx;
  line-height: 64rpx;
  text-align: center;
}
.ctrl_box .dir_slider slider{
  width: 500rpx;
}
.ctrl_box .setting_box{
  width: 100%;
  height: 120rpx;
  display: flex;
  flex-direction: row;
  flex-wrap: nowrap;
  justify-content: space-around;
  align-items: center;
  margin-top: 10rpx;
}
.ctrl_box .setting_box .setting{
  width: 150rpx;
  height: 120rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.ctrl_box .setting_box .setting .icon{
  font-size: 46rpx;
  margin-bottom: 10rpx;
}
.ctrl_box .setting_box .setting .text{
  font-size: 30rpx;
}

.novel_dir_box{
  display: block;
  width: 100%;
  height: 100%;
  overflow: hidden;
  position: fixed;
  top: 0;
  left: 0;
  z-index: 6;
}
.novel_dir_box .mask_bok{
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0;
  left: 0;
  z-index: 6;
  background: rgba(0, 0, 0, 0.7);
}
.novel_dir_box .novel_dir_inner_box{
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: stretch;
  width: 600rpx;
  height: 100%;
  overflow: hidden;
  position: relative;
  z-index: 7;
  left: -600rpx;
}
.novel_dir_box .novel_dir_inner_box .novel_info{
  width: 100%;
  height: 180rpx;
  display: flex;
  flex-direction: row;
  flex-wrap: nowrap;
  justify-content: flex-start;
  align-items: center;
}
.novel_dir_box .novel_dir_inner_box .novel_info .novel_cover{
  width: 100rpx;
  height: 120rpx;
  background: #FF0000;
  margin: 0 30rpx;
}
.novel_dir_box .novel_dir_inner_box .novel_info .info{
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: flex-start;
  width: 390rpx;
}
.novel_dir_box .novel_dir_inner_box .novel_info .info .novel_title{
  font-size: 30rpx;
  margin-bottom: 20rpx;
  font-weight: bold;
}
.novel_dir_box .novel_dir_inner_box .novel_info .info .novel_author{
  font-size: 22rpx;
}
.novel_dir_box .novel_dir_inner_box .novel_info .icon{
  font-size: 40rpx;
}
.novel_dir_box .novel_dir_inner_box .novel_out_dir{
  flex: 1;
  width: 100%;
  display: flex;
  overflow-y: scroll;
}
.novel_dir_box .novel_dir_inner_box .novel_dir{
  flex: 1;
  display: block;
  min-height: 100%;
  padding:0 30rpx;
  padding-bottom: 50rpx;
}
.novel_dir_box .novel_dir_inner_box .novel_dir .desc{
  display: block;
  width: 100%;
  padding: 20rpx 0rpx;
  border-bottom-width: 1px;
  border-bottom-style: solid;
  border-top-width: 1px;
  border-top-style: solid;
  margin: 15rpx 0;
  
}
.novel_dir_box .novel_dir_inner_box .novel_dir .desc:first-child{
  border-top: 0;
  margin-top: 0;
}
.novel_dir_box .novel_dir_inner_box .novel_dir .desc text{
  font-size: 24rpx;
}
.novel_dir_box .novel_dir_inner_box .novel_dir .dir{
  display: block;
  width: 100%;
  padding: 15rpx 0rpx; 
}
.novel_dir_box .novel_dir_inner_box .novel_dir .dir .chapter{
  font-size: 30rpx;
}

.read_setting_box{
  width: 100%;
  height: 320rpx;
  position: fixed;
  bottom: 0;
  left: 0;
  z-index: 4;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: stretch;
}
.read_setting_box .title{
  font-size: 30rpx;
  padding: 30rpx 0;
  text-align: center;
  width: 100%;
  display: block;
}
.read_setting_box .font_setting_box{
  flex: 1;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  align-items: center;
}
.read_setting_box .font_setting_box text{
  font-size: 34rpx;
  padding: 0 30rpx;
}
.read_setting_box .font_setting_box slider{
  width: 400rpx;
}

.quick_box{
  flex: 1;
  width: 100%;
  height: 100rpx;
  display: flex;
  flex-direction: row;
  flex-wrap: nowrap;
  justify-content: flex-start;
  align-items: stretch;
  padding-bottom: 40rpx;
}
.quick_box .quick_inner_box{
  flex: 1;
  padding: 0 30rpx;
  display: flex;
  flex-direction: row;
  flex-wrap: nowrap;
  justify-content: space-around;
  align-items: center;
}

.quick_box .quick_inner_box button{
  display: flex;
  width: 180rpx;
  height: 60rpx;
  font-size: 30rpx;
  padding: 0;
  margin: 0;
  flex-direction: row;
  flex-wrap: nowrap;
  justify-content: center;
  align-items: center;
  border: 1px solid #f8e7e7;
  border-radius: 0;
}
.quick_box .quick_inner_box button::after{
  display: none;
}